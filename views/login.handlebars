{{#if redirected}}
<p class="text-nicegreywhite text-3xl">looks like you've been inactive for awhile. Just to be sure its you lets login again.</p>
{{/if}}


<section class="bg-gray-50 bg-midlight p-4">
  
          <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
              <h1 class="text-xl font-bold leading-tight tracking-tight text-nicegreywhite md:text-2xl shadow-2">
                  Sign in to your account
              </h1>
              <form id="loginform" class="space-y-4 md:space-y-6" action="#">
                  <div>
                      <label for="email" class="block mb-2 text-sm font-medium text-nicegreywhite">Your email</label>
                      <input type="email" name="email" id="email" class="bg-light border border-mid text-nicegreywhite sm:text-sm rounded-lg focus:outline-none focus:ring-dark focus:border-dark block w-full p-2.5 " placeholder="name@company.com" required="true">
                  </div>
                  <div>
                      <label for="password" class="block mb-2 text-sm font-medium text-nicegreywhite">Password</label>
                      <input type="password" name="password" id="password" placeholder="••••••••" class="bg-light border border-mid text-nicegreywhite sm:text-sm rounded-lg focus:outline-none focus:ring-dark focus:border-dark block w-full p-2.5 " required="true">
                  </div>
                  
                  <button type="submit" class="w-full text-nicegreywhite bg-middark hover:bg-light focus:ring-4 focus:outline-none focus:ring-dark font-medium rounded-lg text-sm px-5 py-2.5 text-center ">Sign in</button>
                  <p class="text-sm font-light text-nicegreywhite ">
                      Don’t have an account yet? <a href="/signup" class="font-medium text-primary-600 hover:underline dark:text-primary-500">Sign up</a>
                  </p>
              </form>
          </div>
</section>
<script src="./js/login.js"></script>