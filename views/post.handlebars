<input type="number" id="userid" hidden="true" value="{{user.id}}">
<input type="number" id="postid" hidden="true" value="{{post.id}}">

<article class="max-w-6xl px-6 py-10 mx-auto space-y-16 text-nicegreywhite">
	<div class="w-full mx-auto space-y-4">
		<h1 class="text-5xl font-bold leading-none">{{post.title}}</h1>
        <button type="button" class="flex items-center p-1 space-x-1.5" onclick="addLike()">
				<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" aria-label="Number of likes" class="w-4 h-4 fill-current dark:text-violet-600">
					<path d="M126.638,202.672H51.986a24.692,24.692,0,0,0-24.242,19.434,487.088,487.088,0,0,0-1.466,206.535l1.5,7.189a24.94,24.94,0,0,0,24.318,19.78h74.547a24.866,24.866,0,0,0,24.837-24.838V227.509A24.865,24.865,0,0,0,126.638,202.672ZM119.475,423.61H57.916l-.309-1.487a455.085,455.085,0,0,1,.158-187.451h61.71Z"></path>
					<path d="M494.459,277.284l-22.09-58.906a24.315,24.315,0,0,0-22.662-15.706H332V173.137l9.573-21.2A88.117,88.117,0,0,0,296.772,35.025a24.3,24.3,0,0,0-31.767,12.1L184.693,222.937V248h23.731L290.7,67.882a56.141,56.141,0,0,1,21.711,70.885l-10.991,24.341L300,169.692v48.98l16,16H444.3L464,287.2v9.272L396.012,415.962H271.07l-86.377-50.67v37.1L256.7,444.633a24.222,24.222,0,0,0,12.25,3.329h131.6a24.246,24.246,0,0,0,21.035-12.234L492.835,310.5A24.26,24.26,0,0,0,496,298.531V285.783A24.144,24.144,0,0,0,494.459,277.284Z"></path>
				</svg>
				<span id="likes">{{post.likes}}</span>
			</button>
		
		<p class="text-sm dark:text-gray-600">by
			
				<span>{{user.name}}</span>
			on
			<time>{{post.date_created}}</time>
		</p>
	</div>
	<div class="p-5 bg-middark text-nicegreywhite">
		<p>{{post.content}}</p>
	</div>
</article>

{{#each post.comments as |comment|}}
{{> comment }}
{{/each}}
<div class="flex justify-center">
    <form id="commentform" class="space-y-4 md:space-y-6 bg-midlight rounded-lg w-10/12 pt-2 pb-2 " action="#">
        <label for="comment" class="ml-4 pt-4 text-nicegreywhite">Add a Comment.</label>
        <textarea name="comment" id="comment" placeholder="Blog N/A....." class="resize-y m-4 bg-light border border-mid text-nicegreywhite sm:text-sm rounded-lg focus:outline-none focus:ring-dark focus:border-dark block w-11/12 p-2.5 " required="true"></textarea>
        <button type="submit" class=" text-nicegreywhite bg-middark hover:bg-light focus:ring-4 focus:outline-none focus:ring-dark font-medium rounded-lg text-sm px-5 py-2.5 text-center w-fit m-6 p-2 " onclick="addComment()">add comment</button>
    </form>
</div>

<script src="/js/commentAdder.js"></script>
<script src="/js/likeAdder.js"></script>